# Ignore directories generated by Composer
/drush/contrib/
/vendor/
/web/core/
/web/modules/contrib/
/web/modules/.gitignore
/web/themes/contrib/
/web/themes/.gitignore
/web/profiles/contrib/
/web/profiles/.gitignore
/web/libraries/
/web/.gitignore

# Ignore sensitive information
/web/sites/*/settings.php
/web/sites/*/settings.local.php
/web/sites/*/settings.*.php

# Ignore Drupal's file directory
/web/sites/*/files/
/web/sites/.gitignore
/web/sites/default/settings.ddev.php

# Ignore SimpleTest multi-site environment
/web/sites/simpletest

# Ignore files generated by common IDEs
/.idea/
/.vscode/

# Ignore .env files as they are personal
/.env
/.editorconfig
/.gitattributes
/.csslintrc
/.eslintignore
/.eslintrc.json
/.ht.router.php
/autoload.php
/example.gitignore
/INSTALL.txt

# Ignore composer installed quicksilver scripts
/web/private/scripts/quicksilver/
/.drush-lock-update
